<turbo-frame id="forecast_frame">
  <% if error.present? %>
    <p style="color:red;"><%= error %></p>
  <% elsif forecast.blank? %>
    <p style="color:gray;">No forecast available for this location.</p>
  <% else %>
    <p><strong>Location:</strong> <%= place %> (<%= zip %>)</p>

    <% if from_cache %>
      <span style="background:#e6f7ff;padding:4px 8px;border-radius:4px;">Cached âœ…</span>
    <% else %>
      <span style="background:#eaffea;padding:4px 8px;border-radius:4px;">Fresh ðŸŒŸ</span>
    <% end %>

